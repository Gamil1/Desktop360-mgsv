{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "BastionHostName": {
          "type": "string",
          "minLength": 3,
          "maxLength": 24
        },
        "VirtualNetworkName":{
            "type":"string",
            "metadata": {
                "description": "description"
            }
             },
        "BastionHostSubnetName":{
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "bastionSubnetIPPrefix":{
            "type":"string",
            "metadata":{
                "description": "description"
            }
        }
      },
    "resources": [
        {
            "name": "[parameters('BastionHostName')]",
            "type": "Microsoft.Network/bastionHosts",
            "apiVersion": "2019-04-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', concat(parameters('BastionHostName'),'-ip'))]"
            ],
            "tags": {},
            "properties": {
              "ipConfigurations": [
                {
                  "properties": {
                    "subnet": {
                      "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets/', parameters('VirtualNetworkName'), parameters('BastionHostSubnetName'))]"
                    },
                    "publicIPAddress": {
                      "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', concat(parameters('BastionHostName'),'-ip'))]"
                    }
                  },
                  "name": "IpConf"
                }
              ]
            }
        },
        {
            "name": "[concat(parameters('BastionHostName'),'-ip')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2017-08-01",
            "location": "[resourceGroup().location]",          
            "tags": {},
            "sku": {
              "name": "Standard"
            },
            "properties": {
              "publicIPAllocationMethod": "Static"
            }
          },
          {
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(parameters('VirtualNetworkName'), '/', parameters('BastionHostName'),'-subnet')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressPrefix": "[parameters('bastionSubnetIPPrefix')]"
            }
        }
    ]
  }
