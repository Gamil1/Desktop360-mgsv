{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Mandatorytag": {
            "type": "string",
            "metadata": {
                "description": "Mandatory tags"
            }
          }
    },
    "resources": [     
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "name": "[concat(parameters('Mandatorytag'),'-Mandatorytagpolicydefination')]",
            "apiVersion": "2019-09-01",
            "properties": {
              "policyType": "Custom",
              "mode": "All",
              "parameters": {
              },
              "policyRule": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Resources/subscriptions/resourceGroups"
                        },
                        {
                            "field": "[concat('tags[', parameters('Mandatorytag'), ']')]",
                            "exists": "false"
                        }
                    ]
                },
                "then": {
                    "effect": "deny"
                }
            }
        }
        },
            {
                "type": "Microsoft.Authorization/policyAssignments",
                "name": "[parameters('Mandatorytag')]",
                "apiVersion": "2019-09-01",
                "dependsOn": [
                  "[concat(parameters('Mandatorytag'),'-Mandatorytagpolicydefination')]"
                ],
                "properties": {
                  "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions', concat(parameters('Mandatorytag'),'-Mandatorytagpolicydefination'))]"
                }
              }
    ]
}
