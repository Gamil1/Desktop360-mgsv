{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "Citrix-Vnet",
            "metadata": {
                "description": "Name of the Virtual Network (VNET)"
            }
        },
        "AnsibleSubnet": {
            "type": "string",
            "defaultValue": "AnsibleSubnet",
            "metadata": {
                "description": "Subnet for Management"
            }
        },
        "authenticationType": {
            "type": "string",
            "defaultValue": "sshPublicKey",
            "allowedValues": [
                "sshPublicKey",
                "password"
            ],
            "metadata": {
                "description": "Type of authentication to use on the Virtual Machine. SSH key is recommended."
            }
        },
        "ansible": {
            "type": "object",
            "metadata": {
                "description": "description"
            }
        },
        "ansibleVars": {
            "type": "object",
            "metadata": {
                "description": "description"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
        "apiVersion": "2020-05-01",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[concat(parameters('ansible').AnsibleHostName,'-nic')]",
        "location": "[resourceGroup().location]",
        
        "properties": {
            "ipConfigurations": [
            {
                "name": "ipconfig1",
                "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "subnet": {
                    "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets/', parameters('virtualNetworkName'), parameters('AnsibleSubnet'))]"
                }
                }
            }
            ]
        }
    },
            {
            "apiVersion": "2020-06-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('ansible').AnsibleHostName]",
            "location": "[resourceGroup().location]",
            "plan": {
                "name": "centos-8-2",
                "product": "centos-8-2",
                "publisher": "cognosys"
            },
            "dependsOn": [
                
                "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces', concat(parameters('ansible').AnsibleHostName,'-nic'))]"
            ],
            "properties": {
                "hardwareProfile": {
                "vmSize": "[parameters('ansible').AnsibleVMSize]"
                },
                "osProfile": {
                "computerName": "[parameters('ansible').AnsibleHostName]",
                "adminUsername": "[parameters('ansible').AnsibleUserName]",
                "adminPassword": "[parameters('ansible').AnsiblePassword]",
                "linuxConfiguration": "[if(equals(parameters('authenticationType'), 'password'), json('null'), parameters('ansible').linuxConfiguration)]"
                },
                "storageProfile": {
                "imageReference": {
                    "publisher": "cognosys",
                    "offer": "centos-8-2",
                    "sku": "centos-8-2",
                    "version": "latest"
                },
                "osDisk": {
                    "caching": "ReadWrite",
                    "createOption": "FromImage"
                }
                },
                "networkProfile": {
                "networkInterfaces": [
                    {
                    "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces', concat(parameters('ansible').AnsibleHostName,'-nic'))]"
                    }
                ]
                }
            }
        },
  {
      "name": "ansible/install_ansible",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "tags": {
          "displayName": "Prepare Ansible VM"
      },
      "dependsOn": [
          "[resourceId('Microsoft.Compute/virtualMachines', parameters('ansible').AnsibleHostName)]"
      ],
      "properties": {
          "publisher": "Microsoft.Azure.Extensions",
          "type": "CustomScript",
          "typeHandlerVersion": "2.1",
          "autoUpgradeMinorVersion": true,
          
          "settings": {
              "fileUris": [
                  "[concat('artifactsLocation', 'ansible/scripts/install_vm.sh')]"
              ],
              "commandToExecute": "sh customScript.sh"
          },
          "protectedSettings": {
             
          }

      }
  }
    ],
    "outputs": {}
}